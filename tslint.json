{
  "extends": ["tslint:recommended", "tslint-config-airbnb"],

  "rules": {
    // conflicts with other rule
    "array-type": false,

    // name imports more intelligently
    "import-name": false,

    // not using hungarian notation
    "interface-name": false,

    // sort logically not alphabetically
    "object-literal-sort-keys": false,

    // no way to control this with prettier,
    "ter-arrow-parens": [true, "always"]
  }
}
